{
    "compilerOptions": {
       "lib": [
          "es5",
          "es6"
       ],
       "target": "es5",
       "module": "commonjs",
       "moduleResolution": "node",
       "outDir": "./build",
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "sourceMap": true,
       "skipLibCheck": true,
       "strict": false,
       "esModuleInterop": true,
       "allowSyntheticDefaultImports": true
    },
    "ts-node": {
       "transpileOnly": true,
       "compilerOptions": {
          "experimentalDecorators": true,
          "emitDecoratorMetadata": true
       }
    }
 }